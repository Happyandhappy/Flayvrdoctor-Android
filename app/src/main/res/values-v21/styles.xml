<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomActionBarThemeTrans" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:colorPrimary">@color/md_light_blue_700</item>
        <item name="android:colorPrimaryDark">@color/md_light_blue_700</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimary">@android:color/transparent</item>
    </style>
    <style name="FlayvrTransparentTheme" parent="@style/Theme.Flayvr">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:colorPrimary">@color/black</item>
        <item name="android:colorPrimaryDark">@color/black</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="actionBarStyle">@style/FlayvrActionBarFullscreenTransparent</item>
    </style>
    <style name="FullscreenTheme" parent="@style/TransparentWindowFullscreenTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:actionBarStyle">@style/FlayvrActionBarFullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:colorPrimary">@color/black</item>
        <item name="android:colorPrimaryDark">@color/black</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="actionBarStyle">@style/FlayvrActionBarFullscreen</item>
    </style>
    <style name="GalleryDoctorThemeToolbarDarkOverflow" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/GalleryDoctorActionBar</item>
        <item name="android:actionOverflowButtonStyle">@style/MyCustomThemeOverflow</item>
        <item name="android:colorPrimary">@color/md_blue_grey_800</item>
        <item name="android:colorPrimaryDark">@color/md_blue_grey_800</item>
        <item name="actionOverflowButtonStyle">@style/MyCustomThemeOverflow</item>
        <item name="actionBarStyle">@style/GalleryDoctorActionBar</item>
        <item name="colorPrimary">@color/md_blue_grey_800</item>
        <item name="colorPrimaryDark">@color/md_blue_grey_800</item>
    </style>
    <style name="Theme.Flayvr" parent="@style/Theme.AppCompat.Light">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:windowBackground">@color/flayvr_background</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteStyle</item>
        <item name="android:editTextStyle">@style/Theme.Flayvr.EditText</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:popupMenuStyle">@android:style/Widget.Holo.Light.ListPopupWindow</item>
        <item name="android:selectableItemBackground">@drawable/ab_item_background</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:actionBarWidgetTheme">@android:style/Widget.Holo.Light.ListPopupWindow</item>
        <item name="android:colorPrimary">@color/md_blue_grey_800</item>
        <item name="android:colorPrimaryDark">@color/md_blue_grey_800</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="actionBarWidgetTheme">@null</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>
    <style name="VideoFullscreenTheme" parent="@style/FlayvrTransparentTheme">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:colorPrimary">@color/black</item>
        <item name="android:colorPrimaryDark">@color/black</item>
    </style>
</resources>
